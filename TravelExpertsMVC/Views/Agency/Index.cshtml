@model List<TravelExpertsMVC.Models.ContactViewModel>
@{
    ViewData["Title"] = "Contact Us";
}

<div class="jumbotron jumbotron-custom">
    <h1 >Contact Us</h1>
</div>
<div class="container mt-5">
    
        <div class="row">
            <div class="col-md-12">
            <p class="lead text-center contact-message ">We can’t wait to hear from you to help plan your next dream getaway. <br/>Please reach out to us via email or phone, and we’ll get back to you as soon as possible!</p>
            </div>
        </div>     
    
    <div class="row">
        @foreach (var agency in Model)
        {
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h2>Agency @agency.AgencyId</h2>
                        <p>@agency.AgncyAddress, @agency.AgncyCity, @agency.AgncyProv, @agency.AgncyCountry, @agency.AgncyPostal</p>
                        <p>Phone: @agency.AgncyPhone</p>
                        <p>Fax: @agency.AgncyFax</p>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Agent Name</th>                                    
                                    <th>Email</th>
                                    <th>Position</th>
                                    <th>Phone</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var agent in agency.Agents)
                                {
                                    <tr class="@(agency.Agents.IndexOf(agent) % 2 == 0 ? "table-default" : "")">
                                        <td>@agent.AgentId</td>                                        
                                        <td>@($"{agent.AgtFirstName} {agent.AgtMiddleInitial} {agent.AgtLastName}")</td>                                      
                                        <td>@agent.AgtEmail</td>
                                        <td>@agent.AgtPosition</td>
                                        <td>@agent.AgtBusPhone</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

